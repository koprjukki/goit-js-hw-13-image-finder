<li class="gallery__items">
    <div class="photo-card">
        <img class="gallery__img" src="{{webformatURL}}" alt="{{tags}}" data-source="{{largeImageURL}}" />
        <ul class="stats">
            <li class="stats-item">
                <i class="material-icons">thumb_up</i>
                {{likes}}
            </li>
            <li class="stats-item">
                <i class="material-icons">visibility</i>
                {{views}}
            </li>
            <li class="stats-item">
                <i class="material-icons">comment</i>
                {{comments}}
            </li>
            <li class="stats-item">
                <i class="material-icons">cloud_download</i>
                {{downloads}}
            </li>
        </ul>
    </div>
</li>